<%= form_with(url: search_path, local: true, method: "get") do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag :search_term, nil, placeholder: 'search', class: 'input' %>
    </div>
    <div class="control">
      <div class ="select">
        <%= select_tag("category", options_for_select(Category.all.map{|el| [el.name, el.id]}.insert(0,"")), class: 'select') %>
      </div>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: 'button is-info') %>
    </div>
  </div>
<% end %>