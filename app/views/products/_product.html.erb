<li class="column is-one-fifth">
  <div class="card">
    <% if product.image.present? %>
      <div class="card-image">
        <figure class="image is-square">
          <%= image_tag product.image %>
        </figure>
      </div>
    <% end %>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4"><%= link_to product.name, product %></p>
          <p class="subtitle is-6"><%= number_to_currency product.price %></p>
        </div>
      </div>

      <div class="content">
        <%= truncate(product.description, length: 200, separator: ' ') %>
      </div>
    </div>
  </div>
</li>