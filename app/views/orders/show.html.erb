<div class="container">
  <h1 class="subtitle is-1">Your order</h1>
  <table class=table>
    <tr>
      <th>Order number:<th>
      <th><%= @order.id %></th>
    </tr>
    <tr>
      <th>Order status:<th>
      <th><%= @order.status %></th>
    </tr>
    <tr>
      <th>Name:<th>
      <th><%= @order.name %></th>
    </tr>
    <tr>
      <th>Address:<th>
      <th><%= @order.address %></th>
    </tr>
    <tr>
      <th>Total:<th>
      <th><%= number_to_currency @order.total %></th>
    </tr>
    <tr>
      <th>Items ordered:<th>
      <th><%= @order.note %></th>
    </tr>
  </table>
