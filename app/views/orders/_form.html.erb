<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# HIDDEN FIELD user_id %>
  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <%# HIDDEN FIELD status %>
  <div class="field">
    <%= form.hidden_field :status, value: "Confirmed" %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, value: current_user.address %>
  </div>

  <div class="field">
    <%= form.label :total %>
    <%= form.text_field :total, value: @total %>
  </div>

  <p>Taxes: <%= number_with_precision(@taxes, precision: 2) %></p>

  <p>Notes: <%= @note[0..-3] %></p>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_field :note %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
